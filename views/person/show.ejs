<% include ../partials/header %>

<% let googleURL = `https://www.google.com/maps/embed/v1/place?key=${apiKey}&q=${person.address}` %>

<a href="/" class="btn btn--primary home-btn">Go Home</a>

<div class="container card">
	<div class="card__header">
		<h1><%= person.firstName %> <%= person.lastName %></h1>
	</div>

	<div class="card__content">
		<p>Address: <%= person.address %></p>
		<p>Postcode: <%= person.postcode %></p>
		<p>Mobile: <%= person.mobile %></p>
		<p>Home No: <%= person.homePhone %></p>

		<% if(person.address) { %>
			<div class="card__map">
				<iframe width="100%" height="450" frameborder="0" style="border:0" src="<%= googleURL %>" allowfullscreen></iframe>
			</div>
		<% } %>

	</div>
</div>

<% include ../partials/footer %>